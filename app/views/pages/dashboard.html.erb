                    <%= link_to  "Editer l'offre", "/offers/#{offer.id}/edit", class: "btn btn-success" %>
                  </div>
                </div>
              <% end %>
            </div>
            <div class="col"><!-- Colonne 2 : Colonne validée-->
              <h4>Réservations validées :</h4>
              <% @offers.each do |offer|%>
                <div class="card-product mb-4">
