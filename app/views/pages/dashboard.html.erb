                    <h2><%= offer.title %></h2>
                    <p><%= offer.description %></p>
                    <br/>
                    <%= link_to  "Voir l'offre", "/offers/#{offer.id}", class: "btn btn-primary" %>
                    <%= link_to  "Editer l'offre", "/offers/#{offer.id}/edit", class: "btn btn-success" %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>

